{{!--
<div class="container"> --}}
  <div class="section">
    <div class="row">
      <div class="col s4 m4">
        <div class="icon-block">

          <div class="row">
            <div class="col s12">
              <div class="card horizontal">
                <div class="card-image">
                  <img src="{{ user.user_pic_profile }}" alt="" class="responsive-img">
                </div>
                <div class="card-stacked">
                  <div class="card-content">
                    <p>
                      {{ user.user_First_name }} {{ user.user_Last_name }}
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- <h2 class="center light-blue-text"><i class="material-icons">flash_on</i></h2> -->
          <!-- <h5 class="center">Speeds up development</h5> -->
          <div class="row">
            <div class="col s12">
              <div class="card-panel white">
                  <div class="header black-text">About Me<i id="aboutMeClick" class="material-icons">add_circle_outline</i></div>
                  <div class="card-content">
                      <p class="userBio">
                        {{ user.user_bio_info }}
                      </p>
                  </div>
                

                <div id="aboutMeToHide" class="card horizontal">
                    <div class="card-stacked">
                      <div class="card-content">
                        <form class="col s12" action="/api/aboutme" method="POST">
                          <div class="row">
                            <div class="input-field col s12">
                              <textarea id="newAboutMe" class="materialize-textarea"></textarea>
                              <label for="newAboutMe">Tell us about yourself!</label>
                              <i id='aboutMeCloseToHide' class="material-icons">close</i>
                            </div>
                          </div>
                        </form>
                              <button id="aboutMeSubmitBtn" class="btn waves-effect waves-light" type="submit" name="action" value="submit">Submit
                                    <i class="material-icons right">send</i>
                              </button>
                      </div>
                    </div>
                </div>                     
                                    
              
                
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col s12">

              <div class="card-panel white">
                <span class="black-text">Pictures
                </span>
              </div>

            </div>
          </div>

          <!-- icon-block -->
        </div>
      </div>

      <div class="col s8 m8">
        <div class="icon-block">
          <!-- <div class="icon-block">
              <h2 class="center light-blue-text"><i class="material-icons">group</i></h2> -->
          <!-- <h5 class="center">User Experience Focused</h5> -->

          <div class="row">
            <div class="col s12">
              <div class="card">
                <div class="card-image">
                  <h1>Click countries to select</h1>
                  <div id="chartdiv"></div>
                  <div id="info">Seletced countries:
                    <span id="selected">-</span>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <section>
            <div class="col s12">
              <h4 class="header white-text">My Stories</h4>
              <div class="row">
                <div class="card horizontal">
                    <div class="card-image">
                      <img src="https://cdn.pixabay.com/photo/2018/05/13/17/18/paris-3397173_1280.jpg" alt="" class="card-image responsive-img storyImg">
                    </div>
                    <div class="card-stacked">
                      <div class="card-content">
                        <h4 class="card-title">Story Title
                          <i class="material-icons right">more_vert</i>
                        </h4>
                        {{#each blog}} {{ dataValues.user_StoryList }}
                        <form id="updatePost" action="/api/delete/postList/{{this.id}}" method="POST">
                          <input type="hidden" name="toDelete">
                          <button class="btn btn-danger" type="submit">delete</button>
                        </form>
                        {{/each}}
                      </div>
                      <div class="card-action">
                        <a href="/api/blog/{{ user.client_id }}" target="_blank">Read Story</a>
                        <a href="/api/blog/myblog/{{ user.client_id }}" target="_blank">Create New Story</a>



                      </div>
                    </div>
                    {{!-- </div> --}}
                </div>
              </div>
            </div>
          </section>

          <div class="row">
            <div class="col s12">
              {{!-- <div class="card-panel white"> --}}
                <h4 class="title white-text">&nbsp;Recommendations</h4>

{{!-- food --}}
                <div class="col s6">
                  <div class="card hoverable" style="overflow:hidden">
                    <h5>&emsp;Restaurants/Dining
                    <a class="btn-floating btn-move-up waves-effect waves-light btn-small red right"><i id="foodClick" class="material-icons activator">mode_edit</i></a></h5>
                    
                      <div class="card-content">
                      <ul class="collection">
                        {{#each food}}
                        <li class="collection-item avatar valign-wrapper">
                          <i class="material-icons circle green left">local_dining</i>
                          <P>{{ dataValues.user_rec_food }}</P>
                          

                        </li>
                        <form id="updateFood" action="/api/food/remove/{{this.id}}" method="POST">
                            <input type="hidden" name="toDelete">
                            <button class="btn btn-danger" type="submit">delete</button>
                          </form>
                        {{/each}}
                      </ul> 
                       
                    </div>
                    <div class="card-reveal" style="overflow:hidden">
                    
                      <h6>Add a new recommendation:</h6>
                      
                    <div id='foodToHide'>
                    <span class="card-title" id="doneBtn"><a class="btn-floating waves-effect waves-light btn-small red"><i id='foodCloseToHide' class="material-icons right">close</i></a></span>   

                      <div class="input-field col s12">
                        <textarea id="food_input" class="materialize-textarea"></textarea>
                        <label class="active" for="Food">Food</label>
                        <a id="foodOnSubmit" class="waves-effect waves-light btn-small">Add</a>
                      </div>
                      
                    </div> 
                        
                    </div>
                  </div>
                </div>
                
                {{!--Attractions --}}
                <div class="col s6">
                  <div class="card hoverable" style="overflow:hidden">
                    <h5>&emsp;Attractions
                    <a class="btn-floating btn-move-up waves-effect waves-light btn-small red right"><i id="attractionsClick" class="material-icons activator">mode_edit</i></a></h5>
                    
                      <div class="card-content">
                      <ul class="collection">
                        {{#each attractions}}
                        <li class="collection-item avatar valign-wrapper">
                          <i class="material-icons circle red left">photo_camera</i>
                          <P>{{ dataValues.user_rec_att }}</P>
                          

                        </li>
                        <form id="updateAtt" action="/api/att/remove/{{this.id}}" method="POST">
                            <input type="hidden" name="toDelete">
                            <button class="btn btn-danger" type="submit">delete</button>
                          </form>
                        {{/each}}
                      </ul> 
                       
                    </div>
                    <div class="card-reveal" style="overflow:hidden">
                    
                      <h6>Add a new recommendation:</h6>
                      
                    <div id='attractionsToHide'>
                    <span class="card-title" id="doneBtn"><a class="btn-floating waves-effect waves-light btn-small red"><i id='AttractionsCloseToHide' class="material-icons right">close</i></a></span>   

                      <div class="input-field col s12">
                        <textarea id="attractions_input" class="materialize-textarea"></textarea>
                        <label class="active" for="attractions">attractions</label>
                        <a id="attractionsOnSubmit" class="waves-effect waves-light btn-small">Add</a>
                      </div>
                      
                    </div> 
                        
                    </div>
                  </div>
                </div>


               






                {{!-- Events --}}
                <div class="col s6">
                  <div class="card hoverable" style="overflow:hidden">
                    <h5>&emsp;Events
                    <a class="btn-floating btn-move-up waves-effect waves-light btn-small red right"><i id="eventsClick" class="material-icons activator">mode_edit</i></a></h5>
                    
                      <div class="card-content">
                      <ul class="collection">
                        {{#each events}}
                        <li class="collection-item avatar valign-wrapper">
                          <i class="material-icons circle blue left">photo_camera</i>
                          <P>{{ dataValues.user_rec_eve }}</P>
                          

                        </li>
                        <form id="update" action="/api/event/remove/{{this.id}}" method="POST">
                            <input type="hidden" name="toDelete">
                            <button class="btn btn-danger" type="submit">delete</button>
                          </form>
                        {{/each}}
                      </ul> 
                       
                    </div>
                    <div class="card-reveal" style="overflow:hidden">
                    
                      <h6>Add a new recommendation:</h6>
                      
                    <div id='eventsToHide'>
                    <span class="card-title" id="doneBtn"><a class="btn-floating waves-effect waves-light btn-small red"><i id='eventsCloseToHide' class="material-icons right">close</i></a></span>   

                      <div class="input-field col s12">
                        <textarea id="events_input" class="materialize-textarea"></textarea>
                        <label class="active" for="events">events</label>
                        <a id="eventsOnSubmit" class="waves-effect waves-light btn-small">Add</a>
                      </div>
                      
                    </div> 
                        
                    </div>
                  </div>
                </div>
              {{!-- </div> --}}
               
                <!-- icon block -->
              </div>
              <!-- col s9 -- >
  </div>
              <!-- row -->
            </div>

            <!-- section -->
          </div>
          

        <script src="/js/recommendations.js"></script>
        <script src="/js/aboutMe.js"></script>